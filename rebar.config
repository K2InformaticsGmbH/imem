{cover_enabled, true}.
{cover_excl_mods, [filename]}.

{ct_cover, true}.
{ct_verbose, true}.

{deps, [
    {erlscrypt, {git, "https://github.com/walter-weinmann/erlscrypt.git", {tag, "1.2.0"}}},
    {jsx, {git, "https://github.com/walter-weinmann/jsx.git", {tag, "2.8.2"}}},
    {lager, {git, "https://github.com/K2InformaticsGmbH/lager.git", {ref, "511d18feaca58f984b481a264fb153880b4e4dd2"}}},
    {ranch, {git, "https://github.com/walter-weinmann/ranch.git", {tag, "1.3.2"}}},
    {sext, {git, "https://github.com/K2InformaticsGmbH/sext.git", {ref, "2815231aab748ba7eab636c4962fba5cc3dbbcb2"}}},
    {sqlparse, {git, "https://github.com/walter-weinmann/sqlparse.git", {tag, "1.6.0"}}}
]}.
{deps_error_on_conflict, true}.

{dialyzer_plt_location, local}.
{dialyzer_warnings, [error_handling,
    overspecs,
    race_conditions,
    specdiffs,
    underspecs,
    unknown,
    unmatched_returns
]}.

{edoc_opts, [{doclet, edown_doclet},
    {src_path, ["src/", "examples/"]},
    {app_default, "http://www.erlang.org/doc/man"},
    {top_level_readme,
        {"./README.md",
            "http://github.com/uwiger/sext"}}
]}.

{erl_first_files, ["src/imem_rec_pretty_pt.erl"]}.

{erl_opts, [{parse_transform, lager_transform}]}.

{eunit_opts, [
    {skip_deps, true},
    verbose
]}.

{recursive_cmds, [clean, eunit]}.

{xref_checks, [
    deprecated_functions,
    deprecated_function_calls,
    exports_not_used,
    locals_not_used,
    undefined_functions,
    undefined_function_calls
]}.
